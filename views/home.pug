doctype html
html
  head
    link(rel="stylesheet" href="home.css")
    title chatRooms
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
    script(src="/socket.io/socket.io.js")
    script(src="serilize.js")
  body
    h1(id="mainHeader") Chatrooms beta
    h3(id="startHeader") Start A Chatroom
    form(action="/" method="POST" id="createForm")
      center
        input(name="joinCode" class="input joinCode" placeholder="Join Code")
        br
        input(name="name" class="input name" id="createName" placeholder="Name")
        br
        button(type="submit" class="button") Create Chat Room

    h3(id="joinHeader") Join A Chatroom
    form(action="/join" method="POST" id="joinForm")
      center
        input(name="joinCode" class="input joinCode" placeholder="Join Code" id="joinJoinCode")
        br
        input(name="name" class="input name" placeholder="Name" id="joinNameInput")
        br
        button(type="submit" class="button") Join Chatroom
        div(id="messageDiv") #{messages}
          if messages
            h3 messages
